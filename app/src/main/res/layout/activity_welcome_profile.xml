<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WelcomeProfileActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="30.5dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Profile"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/img_welcome_prof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_welcome_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageButton
        android:id="@+id/img_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="39dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_camera"
        app:layout_constraintStart_toStartOf="@+id/img_welcome_prof"
        app:layout_constraintTop_toTopOf="@+id/img_welcome_prof" />

    <EditText
        android:id="@+id/userET"
        android:layout_width="248dp"
        android:layout_height="48dp"
        android:background="@drawable/border1"
        android:layout_marginTop="47.5dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:hint="User Name"
        android:textColorHint="@color/grey1"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_welcome_prof" />

    <EditText
        android:id="@+id/heightET"
        android:layout_width="248dp"
        android:layout_height="48dp"
        android:background="@drawable/border1"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:hint="Height"
        android:inputType="numberDecimal"
        android:textColorHint="@color/grey1"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userET" />

    <EditText
        android:id="@+id/weightET"
        android:layout_width="248dp"
        android:layout_height="48dp"
        android:background="@drawable/border1"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:hint="Weight"
        android:inputType="numberDecimal"
        android:textColorHint="@color/grey1"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heightET" />

    <EditText
        android:id="@+id/genderET"
        android:layout_width="248dp"
        android:layout_height="48dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/border1"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:hint="Gender"
        android:inputType="text"
        android:textColorHint="@color/grey1"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightET" />

    <EditText
        android:id="@+id/goalWeightET"
        android:layout_width="248dp"
        android:layout_height="48dp"
        android:background="@drawable/border1"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/roboto"
        android:enabled="false"
        android:inputType="numberDecimal"
        android:gravity="center"
        android:hint="Goal Weight"
        android:textColorHint="@color/grey1"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderET" />

    <Button
        android:id="@+id/dietbtn"
        android:layout_width="133dp"
        android:layout_height="64dp"
        android:text="Start A diet"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/ripple"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="59.5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goalWeightET" />


</androidx.constraintlayout.widget.ConstraintLayout>